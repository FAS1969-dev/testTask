{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "dist",
  ],
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "ES2019"
    ],
    "alwaysStrict": true,
    "target": "ES5",
    "jsx": "react",
    "module": "esnext", //"commonjs",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "strictNullChecks": true,
    "noLib": false,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    //    "noEmit": true,
    "noImplicitAny": true,
  },
}
